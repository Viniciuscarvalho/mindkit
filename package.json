{
  "name": "mindkit",
  "version": "0.1.0",
  "description": "Forge your AI development mind - Install and sync AI configs across Claude, Cursor, and Codex",
  "type": "module",
  "bin": {
    "mindkit": "./dist/cli/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup && node -e \"const fs=require('fs');const f='dist/cli/index.js';fs.writeFileSync(f,'#!/usr/bin/env node\\n'+fs.readFileSync(f));fs.chmodSync(f,0o755)\"",
    "dev": "tsup --watch",
    "start": "node dist/cli/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "claude",
    "cursor",
    "codex",
    "cli",
    "config",
    "setup",
    "dotfiles"
  ],
  "author": "Vinicius Carvalho",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/viniciuscarvalho/mindkit.git"
  },
  "homepage": "https://mindkit.dev",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.2.1",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "diff": "^8.0.3",
    "glob": "^11.0.1",
    "ora": "^8.1.1",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/diff": "^6.0.0",
    "@types/node": "^22.10.7",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^4.0.17"
  }
}
